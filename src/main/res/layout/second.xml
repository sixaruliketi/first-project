<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/white_front"
            tools:layout_editor_absoluteY="80dp"
            android:id="@+id/white_front"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent" tools:ignore="MissingConstraints"
    />
    <TextView
            android:text="2 September 2018 Camp Nou Stadium"
            android:textSize="12sp" android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="98dp"
            tools:layout_editor_absoluteX="85dp"
            android:id="@+id/firstText" tools:ignore="MissingConstraints"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/xazi"
            tools:layout_editor_absoluteY="206dp"
            tools:layout_editor_absoluteX="53dp"
            android:id="@+id/xazi" tools:ignore="MissingConstraints"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/xazi2"
            tools:layout_editor_absoluteY="298dp"
            tools:layout_editor_absoluteX="33dp"
            android:id="@+id/xazi2" tools:ignore="MissingConstraints"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="370dp"
            app:srcCompat="@drawable/xazi_vertic"
            tools:layout_editor_absoluteY="309.5dp"
            tools:layout_editor_absoluteX="205dp"
            android:id="@+id/xaziVertic" tools:ignore="MissingConstraints"/>
    <Button
            android:text="Overview"
            android:textSize="12sp" android:textAlignment="center"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/xazi"
            android:id="@+id/overview" android:layout_marginLeft="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/xazi"
            android:textAllCaps="false" android:fontFamily="sans-serif-medium"
            style="@style/Base.TextAppearance.AppCompat.Caption" android:typeface="normal"
            android:bufferType="normal" android:background="#F6F6F6"
            app:layout_constraintTop_toTopOf="@+id/xazi" app:layout_constraintVertical_bias="0.538"/>
    <Button
            android:text="Static"
            android:textSize="12sp" android:textAlignment="center"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/Static" app:layout_constraintTop_toTopOf="@+id/xazi"
            app:layout_constraintBottom_toBottomOf="@+id/xazi"
            app:layout_constraintEnd_toEndOf="@+id/xazi"
            app:layout_constraintStart_toStartOf="@+id/xazi"
            android:fontFamily="sans-serif-medium" android:textAllCaps="false"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:typeface="normal" android:bufferType="normal"
            android:background="#F6F6F6"/>
    <Button
            android:text="Line up"
            android:textSize="12sp" android:textAlignment="center"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/LineUp"
            android:fontFamily="sans-serif-medium" android:textAllCaps="false"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:typeface="normal" android:bufferType="normal"
            android:background="#F6F6F6"
            app:layout_constraintTop_toTopOf="@+id/xazi" app:layout_constraintBottom_toBottomOf="@+id/xazi"
            android:layout_marginStart="103dp" app:layout_constraintStart_toStartOf="@+id/Static"
            app:layout_constraintVertical_bias="0.538"/>


</android.support.constraint.ConstraintLayout>