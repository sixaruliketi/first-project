<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">


    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/green_back"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
    />

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/left_arrow"
            tools:layout_editor_absoluteY="30.13dp"
            tools:layout_editor_absoluteX="20.08dp"
            android:id="@+id/left_arrow" tools:ignore="MissingConstraints"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bell"
            tools:layout_editor_absoluteY="30.02dp"
            tools:layout_editor_absoluteX="336dp"
            android:id="@+id/bell" tools:ignore="MissingConstraints"/>
    <TextView
            android:text="Match Preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="31dp"
            tools:layout_editor_absoluteX="132dp"
            android:id="@+id/MatchPreview"
            android:textSize="17sp" android:textAlignment="center"
            android:textStyle="bold" tools:ignore="MissingConstraints"/>
    <TextView
            android:text="Gameweek 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="52dp"
            tools:layout_editor_absoluteX="147dp"
            android:textSize="14sp" android:textAlignment="center"
            android:id="@+id/Gameweek3" tools:ignore="MissingConstraints"/>


</android.support.constraint.ConstraintLayout>