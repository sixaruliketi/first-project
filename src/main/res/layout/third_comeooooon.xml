<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/green_front"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/green_front" android:layout_marginTop="613dp" app:layout_constraintTop_toTopOf="parent"
            android:background="#00AA7A" android:clickable="false"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ball"
            android:id="@+id/ball"
            app:layout_constraintTop_toTopOf="@+id/green_front"
            app:layout_constraintStart_toStartOf="@+id/green_front"
            android:layout_marginStart="20dp" app:layout_constraintBottom_toBottomOf="@+id/green_front"/>

    <TextView
            android:text="Matches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/green_front"
            android:layout_marginTop="35dp"
            android:textAlignment="center" android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@id/ball"
            app:layout_constraintStart_toStartOf="@+id/ball" app:layout_constraintEnd_toEndOf="@+id/ball"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/top_players"
            tools:layout_editor_absoluteX="98dp"
            android:id="@+id/topPlayers"
            app:layout_constraintTop_toTopOf="@+id/green_front"
            app:layout_constraintBottom_toBottomOf="@+id/green_front"
            app:layout_constraintRight_toLeftOf="@id/video" android:layout_marginRight="29dp"/>
    <TextView
            android:text="Top Players"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/topPlayersText"
            app:layout_constraintTop_toTopOf="@+id/green_front"
            android:layout_marginTop="35dp"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/topPlayers"
            android:textAlignment="center" app:layout_constraintEnd_toEndOf="@+id/topPlayers"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/video"
            tools:layout_editor_absoluteX="175.63dp"
            android:id="@+id/video"
            app:layout_constraintTop_toTopOf="@+id/green_front"
            app:layout_constraintBottom_toBottomOf="@+id/green_front" tools:ignore="MissingConstraints"/>

    <TextView
            android:text="Videos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/green_front"
            android:layout_marginTop="35dp"
            android:textAlignment="center" android:textSize="10sp"
            tools:layout_editor_absoluteX="185dp" android:id="@+id/videos" tools:ignore="MissingConstraints"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/star"
            tools:layout_editor_absoluteX="241dp"
            android:id="@+id/star"
            app:layout_constraintTop_toTopOf="@+id/green_front"
            app:layout_constraintBottom_toBottomOf="@+id/green_front" tools:ignore="MissingConstraints"/>

    <TextView
            android:text="Favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/green_front"
            android:layout_marginTop="35dp"
            android:textAlignment="center" android:textSize="10sp"
            android:id="@+id/favorites"
            app:layout_constraintStart_toStartOf="@+id/star" app:layout_constraintEnd_toEndOf="@+id/star"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/setting"
            tools:layout_editor_absoluteX="302dp"
            android:id="@+id/setting"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/green_front" tools:ignore="MissingConstraints"/>

    <TextView
            android:text="Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center" android:textSize="10sp"
            app:layout_constraintTop_toTopOf="@+id/green_front"
            android:layout_marginTop="35dp"
            android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/setting"
            app:layout_constraintEnd_toEndOf="@+id/setting"/>


</android.support.constraint.ConstraintLayout>